<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <ScrollView
        android:id="@+id/login_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/email_login_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:orientation="vertical">


            <ImageView
                android:layout_width="130dp"
                android:layout_height="119dp"
                android:layout_gravity="right"
                android:layout_marginTop="20dp"
                android:src="@drawable/doctor" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:text="Crear Paciente"
                android:layout_marginTop="-90dp"
                android:textColor="@color/colorPrimario"
                android:textSize="@dimen/textsize"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:text="Ingrese todos los datos corresponientes"
                android:layout_marginTop="-20dp"
                android:textColor="@color/colorPrimario"
                android:textSize="20dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/txtInpIdentificacion"
                    android:layout_width="@dimen/textInputLayout"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingTop="8dp"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:paddingBottom="@dimen/activity_vertical_margin">

                    <EditText
                        android:id="@+id/txtidentificacion"
                        android:layout_width="@dimen/textview_widht_dos"
                        android:layout_height="@dimen/edittext_height"
                        android:background="@drawable/forget"
                        android:hint="N° Identificación"
                        android:inputType="number" />

                </com.google.android.material.textfield.TextInputLayout>

                <Spinner
                    android:id="@+id/tiposIdentificación"
                    android:layout_width="135dp"
                    android:layout_height="match_parent"
                    android:spinnerMode="dialog">

                </Spinner>

            </LinearLayout>




            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/txtInpPrimerNombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin">

                <EditText
                    android:id="@+id/txtPrimerNombre"
                    android:layout_width="@dimen/edittext_width"
                    android:layout_height="@dimen/edittext_height"
                    android:background="@drawable/forget"
                    android:hint="Primer Nombre"
                    android:imeOptions="actionUnspecified"
                    android:inputType="textCapCharacters"
                    android:maxLines="1"
                    android:singleLine="true"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/txtInpSegundoNombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin">

                <EditText
                    android:id="@+id/txtSegundoNombre"
                    android:layout_width="@dimen/edittext_width"
                    android:layout_height="@dimen/edittext_height"
                    android:background="@drawable/forget"
                    android:hint="Segundo Nombre"
                    android:imeOptions="actionUnspecified"
                    android:inputType="textCapCharacters"
                    android:maxLines="1"
                    android:singleLine="true"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/txtInpPrimerApellido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin">

                <EditText
                    android:id="@+id/txtPrimerApellido"
                    android:layout_width="@dimen/edittext_width"
                    android:layout_height="@dimen/edittext_height"
                    android:background="@drawable/forget"
                    android:hint="Primer Apellido"
                    android:imeOptions="actionUnspecified"
                    android:inputType="textCapCharacters"
                    android:maxLines="1"
                    android:singleLine="true"/>

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/txtInpSegundoApellido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin">

                <EditText
                    android:id="@+id/txtSegundoApellido"
                    android:layout_width="@dimen/edittext_width"
                    android:layout_height="@dimen/edittext_height"
                    android:background="@drawable/forget"
                    android:hint="Segundo Apellido"
                    android:imeOptions="actionUnspecified"
                    android:inputType="textCapCharacters"
                    android:maxLines="1"
                    android:singleLine="true"/>

            </com.google.android.material.textfield.TextInputLayout>

            <Spinner
                android:id="@+id/spGenero"
                android:layout_width="550dp"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingTop="8dp"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:spinnerMode="dialog">

            </Spinner>

            <Button
                android:id="@+id/btnTomarFechaNacimiento"
                android:layout_width="335dp"
                android:layout_height="52dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/button"
                android:text="Tomar Fecha de Nacimiento"
                android:textColor="#FFF"
                android:textSize="15dp"
                android:textStyle="bold" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/editInpFechaNacimiento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin">

                <EditText
                    android:id="@+id/editFechaNacimiento"
                    android:layout_width="@dimen/edittext_width"
                    android:layout_height="@dimen/edittext_height"
                    android:background="@drawable/forget"
                    android:hint="Fecha de Nacimiento"
                    android:imeOptions="actionUnspecified"
                    android:inputType="text"
                    android:enabled="false"
                    android:maxLines="1"
                    android:singleLine="true"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/edtInpDomicilio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin">

                <EditText
                    android:id="@+id/editDomicilio"
                    android:layout_width="@dimen/edittext_width"
                    android:layout_height="@dimen/edittext_height"
                    android:background="@drawable/forget"
                    android:hint="Domicilio"
                    android:imeOptions="actionUnspecified"
                    android:inputType="textCapCharacters"
                    android:maxLines="1"
                    android:singleLine="true"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/editInpCorreo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin">

                <EditText
                    android:id="@+id/editCorreo"
                    android:layout_width="@dimen/edittext_width"
                    android:layout_height="@dimen/edittext_height"
                    android:background="@drawable/forget"
                    android:hint="Correo"
                    android:imeOptions="actionUnspecified"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:singleLine="true"/>

            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/codigoTelefono"
                    android:layout_width="@dimen/spinner_dos"
                    android:layout_height="match_parent"
                    android:spinnerMode="dialog">

                </Spinner>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/editInpCelular"
                    android:layout_width="@dimen/textInputLayoutDos"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingTop="8dp"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:paddingBottom="@dimen/activity_vertical_margin">

                    <EditText
                        android:id="@+id/editCelular"
                        android:layout_width="@dimen/textD"
                        android:layout_height="@dimen/edittext_height"
                        android:background="@drawable/forget"
                        android:hint="Celular"
                        android:imeOptions="actionUnspecified"
                        android:inputType="number"
                        android:maxLines="1"
                        android:singleLine="true" />

                </com.google.android.material.textfield.TextInputLayout>



            </LinearLayout>



            <Button
                android:id="@+id/btnRegistrarPaciente"
                android:layout_width="384dp"
                android:layout_height="67dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:background="@drawable/button"
                android:text="Registrar Paciente"
                android:textColor="#FFF"
                android:textSize="18dp"
                android:textStyle="bold" />

        </LinearLayout>




    </ScrollView>



</LinearLayout>